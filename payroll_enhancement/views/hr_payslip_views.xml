<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="work_location_view_hr_payslip_form" model="ir.ui.view">
        <field name="name">work.location.view.hr.payslip.form</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@name='top_left']" position="inside">
                <field name="work_location_id"/>
            </xpath>

        </field>
    </record>

    <record id="work_location_view_hr_payslip_tree" model="ir.ui.view">
        <field name="name">work.location.view.hr.payslip.tree</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='employee_id']" position="after">
                <field name="work_location_id"/>
            </xpath>

        </field>
    </record>

</odoo>