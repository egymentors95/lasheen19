<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="employee_document_wizard_view_form" model="ir.ui.view">
        <field name="name">employee.document.wizard.view.form</field>
        <field name="model">employee.document.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="date_from"/>
                        </group>
                        <group>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <group>
                        <field name="employee_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="department_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="job_position_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="document_type_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Export Xlsx" name="action_download_excel" type="object" class="btn-primary"/>
                    <button name="action_print_pdf"
                            string="Export PDF"
                            type="object"
                            class="btn-secondary"/>
                    <button string="Views" name="action_create_list_view" type="object" class="btn-primary"/>

                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="employee_document_wizard_action" model="ir.actions.act_window">
        <field name="name">Employee Document</field>
        <field name="res_model">employee.document.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            </p>
        </field>
    </record>

    <menuitem id="employee_document_wizard_menuitem_root" name="Employee Document Report"
              parent="hr.hr_menu_hr_reports"
              sequence="100"/>


    <menuitem id="employee_document_wizard_menuitem" name="Employee Document Wizard"
              parent="employee_document.employee_document_wizard_menuitem_root"
              action="employee_document.employee_document_wizard_action"
              sequence="10"/>


</odoo>