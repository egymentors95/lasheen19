<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="document_type_view_tree" model="ir.ui.view">
        <field name="name">document.type.view.tree</field>
        <field name="model">document.type</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="code"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>

    <record id="document_type_action" model="ir.actions.act_window">
        <field name="name">Document Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">document.type</field>
        <field name="view_mode">list</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="menu_document_employee_root" name="Document Employee" parent="hr.hr_menu_configuration"  sequence="500"/>
    <menuitem id="menu_document_type" name="Document Employee" parent="employee_document.menu_document_employee_root" action="employee_document.document_type_action"  sequence="100"/>

</odoo>