<odoo>
    <template id="employee_document_pdf">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h3 style="text-align: center;">Employee Documents Report</h3>

                    <table class="table table-sm table-bordered" style="width: 100%; border-collapse: collapse;">
                        <thead>
                            <tr>
                                <th style="border: 1px solid #000; padding: 5px;">Employee</th>
                                <th style="border: 1px solid #000; padding: 5px;">Department</th>
                                <th style="border: 1px solid #000; padding: 5px;">Job Position</th>
                                <th style="border: 1px solid #000; padding: 5px;">Company</th>
                                <th style="border: 1px solid #000; padding: 5px;">Document Type</th>
                                <th style="border: 1px solid #000; padding: 5px;">Issue Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs.get_report_data()['combined_data']" t-as="line">
                                <tr>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line['employee']"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line['department']"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line['job_position']"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line['company']"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line['document_type']"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line['issue_date']"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
