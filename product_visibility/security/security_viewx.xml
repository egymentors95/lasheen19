<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Security Category -->
    <record id="module_product_category" model="res.groups.privilege">
        <field name="name">Category</field>
        <field name="description">Category Access Management</field>
        <field name="sequence">30</field>
    </record>

    <!-- Contact User -->
    <record id="category_user_group" model="res.groups">
        <field name="name">User</field>
        <field name="privilege_id" ref="product_visibility.module_product_category"/>
    </record>

    <!-- category Manager -->
    <record id="category_manager_group" model="res.groups">
        <field name="name">Manager</field>
        <field name="privilege_id" ref="product_visibility.module_product_category"/>
        <field name="implied_ids" eval="[(4, ref('category_user_group'))]"/>
    </record>

</odoo>