<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="visibility_product_template_form_view" model="ir.ui.view">
        <field name="name">visibility.product.template.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='type']" position="after">
                <field name="is_category_visibility"/>
                <field name="allowed_user_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
            </xpath>

        </field>
    </record>

    <record id="product_template_visibility_rule" model="ir.rule">
        <field name="name">Product Visibility By Allowed Users</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="domain_force">
            ['|',
            ('allowed_user_ids', '=', False),
            ('allowed_user_ids', 'in', [user.id])
            ]
        </field>
    </record>

</odoo>