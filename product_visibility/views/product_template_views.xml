<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="visibility_product_template_form_view" model="ir.ui.view">
        <field name="name">visibility.product.template.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='type']" position="after">
                <field name="is_category_visibility"/>
                <field name="allowed_user_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}" readonly="is_category_visibility == False"/>
            </xpath>

        </field>
    </record>

    <record id="product_template_visibility_rule_user" model="ir.rule">
        <field name="name">Product Visibility By Allowed Users</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="domain_force">
            ['|',
            ('allowed_user_ids', '=', False),
            ('allowed_user_ids', 'in', [user.id])
            ]
        </field>
        <field name="groups" eval="[(4, ref('product_visibility.category_user_group'))]"/>
    </record>

     <record id="product_template_visibility_rule_manager" model="ir.rule">
        <field name="name">Product Visibility By Allowed Manager</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('product_visibility.category_manager_group'))]"/>
    </record>

</odoo>