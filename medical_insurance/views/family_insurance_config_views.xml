<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="family_insurance_config_view_tree" model="ir.ui.view">
        <field name="name">family.insurance.config.view.tree</field>
        <field name="model">family.insurance.config</field>
        <field name="arch" type="xml">
            <list create="1" editable="bottom">
                <field name="name"/>
                <field name="age_from"/>
                <field name="age_to"/>
                <field name="company_share"/>
                <field name="employee_share"/>
            </list>
        </field>
    </record>

    <record id="family_insurance_config_action" model="ir.actions.act_window">
        <field name="name">family Insurance Configurations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">family.insurance.config</field>
        <field name="view_mode">list</field>
    </record>


    <menuitem id="menu_family_insurance_root" name="Family Insurance" parent="hr.hr_menu_configuration"
              sequence="1000"/>


    <menuitem id="family_insurance_config_menuitem" name="Family Insurance Config"
              parent="medical_insurance.menu_family_insurance_root"
              action="medical_insurance.family_insurance_config_action"
              sequence="850"/>


</odoo>