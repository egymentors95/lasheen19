<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="family_medical_insurance_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h3 style="text-align: center;">Family Medical Insurance Report</h3>


                    <table class="table table-sm table-bordered" style="width: 100%; border-collapse: collapse;">
                        <thead>
                            <tr>
                                <th style="border: 1px solid #000; padding: 5px;">Employee</th>
                                <th style="border: 1px solid #000; padding: 5px;">Department</th>
                                <th style="border: 1px solid #000; padding: 5px;">Job</th>
                                <th style="border: 1px solid #000; padding: 5px;">Reference</th>
                                <th style="border: 1px solid #000; padding: 5px;">insurance_number</th>
                                <th style="border: 1px solid #000; padding: 5px;">Insurance Provider</th>
                                <th style="border: 1px solid #000; padding: 5px;">Medical Network</th>
                                <th style="border: 1px solid #000; padding: 5px;">Insurance Category</th>
                                <th style="border: 1px solid #000; padding: 5px;">Start Date</th>
                                <th style="border: 1px solid #000; padding: 5px;">End Date</th>
                                <th style="border: 1px solid #000; padding: 5px;">Company Share</th>
                                <th style="border: 1px solid #000; padding: 5px;">Employee Share</th>
                                <th style="border: 1px solid #000; padding: 5px;">Monthly Contribution</th>
                                <th style="border: 1px solid #000; padding: 5px;">Company Discount</th>
                                <th style="border: 1px solid #000; padding: 5px;">Active/In Active</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="line">
                                <tr>
                                    <td style="border: 1px solid #000; padding: 5px;">
                                        <t t-esc="line.employee_id.name"/>
                                    </td>
                                    <td style="border: 1px solid #000; padding: 5px;">
                                        <t t-esc="line.department_id.name"/>
                                    </td>

                                    <td style="border: 1px solid #000; padding: 5px;">
                                        <t t-esc="line.job_id.name"/>
                                    </td>

                                    <td style="border: 1px solid #000; padding: 5px;">
                                        <t t-esc="line.registration_number"/>
                                    </td>

                                    <td style="border: 1px solid #000; padding: 5px;">
                                        <t t-esc="line.insurance_number"/>
                                    </td>
                                    <td style="border: 1px solid #000; padding: 5px;">
                                        <t t-esc="line.insurance_provider_id.name"/>
                                    </td>
                                    <td style="border: 1px solid #000; padding: 5px;">
                                        <t t-esc="line.medical_network_id.name"/>
                                    </td>
                                    <td style="border: 1px solid #000; padding: 5px;">
                                        <t t-esc="line.insurance_category_id.name"/>
                                    </td>
                                    <td style="border: 1px solid #000; padding: 5px;">
                                        <t t-esc="line.insurance_start_date"/>
                                    </td>
                                    <td style="border: 1px solid #000; padding: 5px;">
                                        <t t-esc="line.insurance_end_date"/>
                                    </td>
                                    <td style="border: 1px solid #000; padding: 5px;">
                                        <t t-esc="line.company_share"/>
                                    </td>
                                    <td style="border: 1px solid #000; padding: 5px;">
                                        <t t-esc="line.employee_share"/>
                                    </td>
                                    <td style="border: 1px solid #000; padding: 5px;">
                                        <t t-esc="line.monthly_contribution"/>
                                    </td>
                                    <td style="border: 1px solid #000; padding: 5px;">
                                        <t t-esc="line.company_discount"/>
                                    </td>
                                    <td style="border: 1px solid #000; padding: 5px;">
                                        <t t-esc="line.in_active"/>
                                    </td>

                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>