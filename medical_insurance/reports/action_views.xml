<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="paperformat_medical_insurance" model="report.paperformat">
        <field name="name">Medical Insurance</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">29</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">3</field>
        <field name="margin_right">3</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">27</field>
        <field name="dpi">90</field>
    </record>


    <record id="employee_medical_insurance_wizard_pdf_report" model="ir.actions.report">
        <field name="name">Employee Medical Insurance (PDF)</field>
        <field name="model">medical.insurance</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">medical_insurance.employee_medical_insurance_template</field>
        <field name="print_report_name">'Employee Medical Insurance PDF'</field>
        <field name="binding_model_id" ref="model_medical_insurance"/>
        <field name="paperformat_id" ref="medical_insurance.paperformat_medical_insurance"/>
    </record>

    <record id="action_print_medical_insurance_pdf" model="ir.actions.server">
        <field name="name">Print Medical Insurance PDF</field>
        <field name="model_id" ref="medical_insurance.model_medical_insurance"/>
        <field name="binding_model_id" ref="model_medical_insurance"/>

        <field name="state">code</field>
        <field name="code">
            action = {
            'type': 'ir.actions.report',
            'report_name': 'medical_insurance.employee_medical_insurance_template',
            'report_type': 'qweb-pdf',
            'report_file': 'Employee_Medical_Insurance.pdf',
            'res_ids': [record.id for record in records],
            'name': 'Employee Medical Insurance Report'
            }
        </field>
    </record>

    <record id="action_print_medical_insurance_excel" model="ir.actions.server">
        <field name="name">Print Medical Insurance Excel</field>
        <field name="model_id" ref="medical_insurance.model_medical_insurance"/>
        <field name="binding_model_id" ref="medical_insurance.model_medical_insurance"/>

        <field name="state">code</field>
        <field name="code">
            action = records.generate_excel_report_multiple()
        </field>
    </record>

    <!--    #_____________________________________________________________________-->

    <record id="family_medical_insurance_wizard_pdf_report" model="ir.actions.report">
        <field name="name">Family Medical Insurance (PDF)</field>
        <field name="model">family.insurance</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">medical_insurance.family_medical_insurance_template</field>
        <field name="print_report_name">'Family Medical Insurance PDF'</field>

        <field name="paperformat_id" ref="medical_insurance.paperformat_medical_insurance"/>
    </record>

    <record id="action_print_family_insurance_pdf" model="ir.actions.server">
        <field name="name">Print Family Insurance PDF</field>
        <field name="model_id" ref="medical_insurance.model_family_insurance"/>
        <field name="binding_model_id" ref="medical_insurance.model_family_insurance"/>

        <field name="state">code</field>
        <field name="code">
            action = {
            'type': 'ir.actions.report',
            'report_name': 'medical_insurance.family_medical_insurance_template',
            'report_type': 'qweb-pdf',
            'report_file': 'Family_Medical_Insurance.pdf',
            'res_ids': [record.id for record in records],
            'name': 'Family Medical Insurance Report'
            }
        </field>
    </record>


    <record id="action_family_insurance_excel" model="ir.actions.server">
        <field name="name">Export Family Insurance Excel</field>
        <field name="model_id" ref="medical_insurance.model_family_insurance"/>
        <field name="binding_model_id" ref="medical_insurance.model_family_insurance"/>

        <field name="state">code</field>
        <field name="code">
            action = records.action_export_family_insurance_excel()
        </field>
    </record>

</odoo>
