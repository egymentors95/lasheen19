<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="allowed_users_view_account_journal_form" model="ir.ui.view">
        <field name="name">allowedusers.view.account.journal.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='type']" position="after">
                <field name="allowed_user_ids" widget="many2many_tags" options="{'no_create': True}"/>
            </xpath>

        </field>
    </record>

    <record id="allowed_journals_rule" model="ir.rule">
        <field name="name">Allowed Journals: Users</field>
        <field name="model_id" ref="account.model_account_journal"/>
        <field name="domain_force">
            ['|',
            ('allowed_user_ids', '=', False),
            ('allowed_user_ids', 'in', [user.id])
            ]
        </field>
    </record>


</odoo>