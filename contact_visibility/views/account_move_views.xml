<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="custom_account_move_form" model="ir.ui.view">
        <field name="name">custom.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_id" invisible="move_type not in ('out_invoice', 'out_refund', 'out_receipt')" domain="[('contact_type', '=', 'customer')]"/>
                <field name="partner_id" invisible="move_type not in ('in_invoice', 'in_refund', 'in_receipt')" domain="[('contact_type', '=', 'vendor')]"/>
            </xpath>
        </field>
    </record>

</odoo>