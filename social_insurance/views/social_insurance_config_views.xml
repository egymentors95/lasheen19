<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="social_insurance_config_view_tree" model="ir.ui.view">
        <field name="name">social.insurance.config.view.tree</field>
        <field name="model">social.insurance.config</field>
        <field name="arch" type="xml">
            <list create="1" editable="bottom">
                <field name="name"/>
                <field name="age_from"/>
                <field name="age_to"/>
                <field name="company_contribution"/>
                <field name="employee_contribution"/>
            </list>
        </field>
    </record>

    <record id="social_insurance_config_action" model="ir.actions.act_window">
        <field name="name">Social Insurance Configurations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">social.insurance.config</field>
        <field name="view_mode">list</field>
    </record>


    <menuitem id="social_insurance_config_menuitem" name="Social Insurance Config"
              parent="social_insurance.menu_social_insurance_root"
              action="social_insurance.social_insurance_config_action"
              sequence="500"/>


</odoo>