<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="social_report_view_view_tree" model="ir.ui.view">
        <field name="name">social.report.view.view.tree</field>
        <field name="model">social.report.view</field>
        <field name="arch" type="xml">
            <list create="0">
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="company_id"/>
                <field name="job_title_id"/>
                <field name="insurance_office_id"/>
                <field name="category_id"/>
                <field name="insurance_number"/>
                <field name="establishment_number"/>
                <field name="entry_date"/>
                <field name="exit_date"/>
                <field name="insurance_amount"/>
                <field name="company_portion"/>
                <field name="employee_portion"/>
                <field name="monthly_obligation"/>
            </list>
        </field>
    </record>

    <record id="social_report_view_action" model="ir.actions.act_window">
        <field name="name">Social Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">social.report.view</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem id="social_report_wizard_menuitem" name="Social Insurance View"
              parent="social_insurance.social_insurance_wizard_menuitem_root"
              action="social_insurance.social_report_view_action"
              sequence="100"/>



</odoo>