<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="social_insurance_view_employee_form" model="ir.ui.view">
        <field name="name">social.insurance.view.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">



            <xpath expr="//notebook" position="inside">
                <page string="Social Insurance" name="social_insurance">
                    <field name="social_insurance_ids">
                        <list editable="bottom">
                            <field name="employee_id" column_invisible="1"/>
                            <field name="insurance_number" optional="show"/>
                            <field name="job_title_id" optional="show"/>
                            <field name="establishment_number" optional="show"/>
                            <field name="insurance_office_id" optional="show"/>
                            <field name="entry_date" optional="show"/>
                            <field name="exit_date" optional="show"/>
                            <field name="insurance_amount" optional="show"/>
                            <field name="company_portion" optional="show"/>
                            <field name="employee_portion" optional="show"/>
                            <field name="monthly_obligation" optional="show"/>
                            <field name="category_id" optional="show"/>
                            <field name="currency_id" optional="show"/>
                            <field name="company_id" optional="show"/>
                            <field name="in_active" optional="show"/>
                        </list>

                    </field>
                </page>
            </xpath>

        </field>
    </record>

</odoo>