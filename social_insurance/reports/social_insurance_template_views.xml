<odoo>
    <template id="social_insurance_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h3 style="text-align: center;">Social Insurance Report</h3>

                    <table class="table table-sm table-bordered" style="width: 100%; border-collapse: collapse;">
                        <thead>
                            <tr>
                                <th style="border: 1px solid #000; padding: 5px;">Employee</th>
                                <th style="border: 1px solid #000; padding: 5px;">Department</th>
                                <th style="border: 1px solid #000; padding: 5px;">Job Position</th>
                                <th style="border: 1px solid #000; padding: 5px;">Company</th>
                                <th style="border: 1px solid #000; padding: 5px;">Job Title</th>
                                <th style="border: 1px solid #000; padding: 5px;">Insurance Office</th>
                                <th style="border: 1px solid #000; padding: 5px;">Category</th>
                                <th style="border: 1px solid #000; padding: 5px;">Insurance Number</th>
                                <th style="border: 1px solid #000; padding: 5px;">Establishment Number</th>
                                <th style="border: 1px solid #000; padding: 5px;">Entry Date</th>
                                <th style="border: 1px solid #000; padding: 5px;">Exit Date</th>
                                <th style="border: 1px solid #000; padding: 5px;">Insurance Amount</th>
                                <th style="border: 1px solid #000; padding: 5px;">Company Portion</th>
                                <th style="border: 1px solid #000; padding: 5px;">Employee Portion</th>
                                <th style="border: 1px solid #000; padding: 5px;">Monthly Obligation</th>
                                <th style="border: 1px solid #000; padding: 5px;">Active/in-Active</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="line">
                                <tr>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line.employee_id.name"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line.department_id.name"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line.job_id.name"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line.company_id.name"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line.job_title_id.name"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line.insurance_office_id.name"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line.category_id.name"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line.insurance_number"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line.establishment_number"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line.entry_date"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line.exit_date"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line.insurance_amount"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line.company_portion"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line.employee_portion"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line.monthly_obligation"/></td>
                                    <td style="border: 1px solid #000; padding: 5px;"><t t-esc="line.in_active"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
